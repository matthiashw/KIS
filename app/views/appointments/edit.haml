- title t('appointment.edit')

= render :partial => 'form'

.action-links
    - if authorize?('delete_appointment')
        = link_to t('action.destroy'), @appointment, :confirm => t('delete_confirmation'), :method => :delete, :class => 'acts_as_button lightgray'
    - if authorize?('view_appointment')
        = link_to t('action.back'), appointments_path, :class => 'acts_as_button darkgray'
