- title t('admin.catalog.user_defined.add_field_entry')

- form_tag url_for(:controller => 'catalogs' , :action=> 'create_field_entry', :id => @catalog.id), :class => 'formtastic add_field_entry' do
 
    %fieldset.inputs
        %ol
            %li.string.required
                %label
                    = t('formtastic.labels.field_entry.name')
                    %span.required
                = text_field_tag :name
                %p.inline-hints
            %li.text.required
                %label
                    = t('formtastic.labels.field_entry.description')
                    %span.required
                = text_field_tag :description
                %p.inline-hints
            %li.select.required
                %label
                    = t('formtastic.labels.field_definition.input_type')
                = select_tag :input_type, options_for_select(InputTypeManager.input_type_descriptions)
                %p.inline-hints
                    = t('formtastic.hints.field_definition.input_type')
            %li.string.required
                %label
                    = t('formtastic.labels.field_definition.additional_type_info')
                = text_field_tag :additional_type_info
                %p.inline-hints
                    = t('formtastic.hints.field_definition.additional_type_info')

    %fieldset.buttons
        %ol
            %li
                = submit_tag t('admin.catalog.user_defined.add_field_entry') , :disable_with => t('please_wait')



.action-links
    = link_to t('action.back'), @catalog, :class => 'acts_as_button darkgray'
