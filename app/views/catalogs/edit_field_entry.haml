- title t('admin.catalog.user_defined.edit_field_entry')

- form_tag url_for(:controller => 'catalogs' , :action=> 'update_field_entry', :id => @catalog.id, :node_to_edit => @edit_field_entry.id), :class => 'formtastic edit_field_entry' do
    %fieldset.inputs
        %ol
            %li.string.required
                %label
                    = t('formtastic.labels.field_entry.code')
                    %span.required
                = text_field_tag :code, @edit_field_entry.code
                %p.inline-hints
            %li.string.required
                %label
                    = t('formtastic.labels.field_entry.name')
                    %span.required
                = text_field_tag :name, @edit_field_entry.name
                %p.inline-hints
            %li.string.required
                %label
                    = t('formtastic.labels.field_entry.description')
                    %span.required
                = text_field_tag :description, @edit_field_entry.description
                %p.inline-hints

    - if @edit_field_entry.instance_of? FieldEntry
        %fieldset.inputs
            %ol
                %li.select.required
                    %label
                        = t('formtastic.labels.field_definition.input_type')
                    = select_tag :input_type, options_for_select(InputTypeManager.input_type_descriptions,@edit_field_entry.field_definition.input_type)
                    %p.inline-hints
                        = t('formtastic.hints.field_definition.input_type')
                %li.string.required
                    %label
                        = t('formtastic.labels.field_definition.additional_type_info')
                    = text_field_tag :additional_type_info, @edit_field_entry.field_definition.additional_type_info
                    %p.inline-hints
                        = t('formtastic.hints.field_definition.additional_type_info')

    %fieldset.buttons
        %ol
            %li
                = submit_tag t('action.update'), :disable_with => t('please_wait')


.action-links
    = link_to t('action.back'), @catalog, :class => 'acts_as_button darkgray'
