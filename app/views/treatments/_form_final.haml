- semantic_form_for(@treatment, :url => {:controller => "treatments" , :action => "create"}) do |f|
  =hidden_field_tag "current_stage", "#{@current_stage}"
  = f.error_messages
  - f.inputs do
    = f.input :diagnoses, :as => :select, :collection => @diagnoses, :label_method => :description
    = f.input :description
    = f.input :start_date, :as => :calendar
  - f.buttons do
    = f.commit_button :button_html => { :disable_with => t('please_wait') }
