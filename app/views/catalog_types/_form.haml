- semantic_form_for @catalog_type do |f|
  = f.error_messages
  - f.inputs do
    = f.input :name
    -if !edit
      = f.input :import_method, :as => :select, :collection => ImporterManager.instance.importer_names_selection, :include_blank => false
    = f.input :application, :as => :select, :collection => CatalogManager.instance.application_names, :include_blank => true
    - if edit
      = f.input :active_catalog, :as => :select, :collection => @catalog_type.catalogs, :label_method => :catalog_select_name
  - f.buttons do
    = f.commit_button :button_html => { :disable_with => t('please_wait') }
