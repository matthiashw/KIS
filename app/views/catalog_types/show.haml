- title @catalog_type.name

.fields
    .field
        .field-label
            =t('admin.catalog_type.name')
        .field-content
            = h @catalog_type.name
    .field
        .field-label
            =t('admin.catalog_type.import_method')
        .field-content
            = h ImporterManager.instance.importer_names[@catalog_type.import_method]
    .field
        .field-label
            =t('admin.catalog_type.application')
        .field-content
            - if @catalog_type.application != ""
                = h CatalogManager.instance.applications[@catalog_type.application]['name']
            - else
                -

.action-links
    = link_to t('action.back'), catalog_types_path, :class => 'acts_as_button darkgray'
    = link_to t('action.edit'), edit_catalog_type_path(@catalog_type), :class => 'acts_as_button'
    
