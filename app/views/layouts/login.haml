%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
    %head
        %meta{'http-equiv' => 'Content-Type', :content => 'text/html', :charset => 'utf-8'}
        %title= h(yield(:title) || "Untitled")
        = stylesheet_link_tag 'reset','formtastic', 'formtastic_changes', 'master', 'style', 'install', :cache => 'base'
    %body#frontpage{:class => make_body_id}
        #wrapper
            #container
                #header
                    %img.logo{:src => "/images/logo.png", :alt => "Hopen Logo"}
                #center
                    .content
                        .inner-bg
                            .inner
                                - flash.each do |name, msg|
                                    %div{ :class => "messages #{name}"}
                                        = content_tag :p, msg, :id => "flash_#{name}"

                                - if show_title?
                                    %h1=h yield(:title)

                                = yield

        = render :partial => 'shared/footer'
