- semantic_form_for @user do |f|
    = f.error_messages

    - f.inputs do
        = f.input :username
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.input :first_name
        = f.input :family_name
        = f.input :address, :input_html => { :rows => 4, :cols => 30 }
        = f.input :phone
        %li.select.required
            %label
                = t('formtastic.labels.user.language')
            = f.select :language, options_for_select(get_locale_hash, @user.language)
            %p.inline-hints
                = t('formtastic.hints.user.language')

        = f.input :domains, :as => :check_boxes, :collection => @domains
        = f.input :homepage, :as => :select, :collection => homepages(@user.id)
    - f.buttons do
        = f.commit_button :button_html => { :disable_with => t('please_wait') }


